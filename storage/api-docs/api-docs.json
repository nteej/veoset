    "components": {
        "schemas": {
            "User": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "John Doe"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "john@example.com"
                    },
                    "role": {
                        "type": "string",
                        "enum": [
                            "veo_admin",
                            "site_manager",
                            "maintenance_staff",
                            "customer"
                        ],
                        "example": "maintenance_staff"
                    },
                    "permissions": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "type": "object"
            },
            "Asset": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "Generator Unit 01"
                    },
                    "asset_type": {
                        "type": "string",
                        "example": "generator"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "operational",
                            "maintenance",
                            "emergency",
                            "offline"
                        ],
                        "example": "operational"
                    },
                    "location": {
                        "type": "string",
                        "example": "Building A - Floor 2"
                    },
                    "is_active": {
                        "type": "boolean",
                        "example": true
                    },
                    "health_score": {
                        "type": "number",
                        "format": "float",
                        "example": 85.5
                    },
                    "health_status": {
                        "type": "string",
                        "enum": [
                            "excellent",
                            "good",
                            "fair",
                            "poor",
                            "critical"
                        ],
                        "example": "good"
                    },
                    "last_updated": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "site": {
                        "properties": {
                            "id": {
                                "type": "integer",
                                "example": 1
                            },
                            "name": {
                                "type": "string",
                                "example": "Main Facility"
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            },
            "AssetDetail": {
                "properties": {
                    "asset": {
                        "$ref": "#/components/schemas/Asset"
                    },
                    "recent_history": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/AssetHistory"
                        }
                    },
                    "health_trend": {
                        "properties": {
                            "trend": {
                                "type": "string",
                                "enum": [
                                    "improving",
                                    "stable",
                                    "declining"
                                ]
                            },
                            "change": {
                                "type": "number"
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            },
            "AssetHistory": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "event_type": {
                        "type": "string",
                        "enum": [
                            "performance_reading",
                            "diagnostic_scan",
                            "status_change"
                        ],
                        "example": "performance_reading"
                    },
                    "health_score": {
                        "type": "number",
                        "format": "float",
                        "example": 85.5
                    },
                    "performance_score": {
                        "type": "number",
                        "format": "float",
                        "example": 92.1
                    },
                    "temperature": {
                        "type": "number",
                        "format": "float",
                        "example": 45.2
                    },
                    "pressure": {
                        "type": "number",
                        "format": "float",
                        "example": 15.8
                    },
                    "vibration": {
                        "type": "number",
                        "format": "float",
                        "example": 2.1
                    },
                    "anomaly_detected": {
                        "type": "boolean",
                        "example": false
                    },
                    "anomaly_description": {
                        "type": "string"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "sanctum": {
                "type": "http",
                "description": "Laravel Sanctum authentication token",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
